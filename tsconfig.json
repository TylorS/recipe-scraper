{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": [
      "dom",
      "esnext"
    ],
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "@application/*": [
        "./src/application/*"
      ],
      "@composition/*": [
        "./src/composition/*"
      ],
      "@domain/*": [
        "./src/domain/*"
      ],
      "@infrastructure/*": [
        "./src/infrastructure/*"
      ],
      "@shared/*": [
        "./src/shared/*"
      ]
    },
    "rootDir": ".",
    "sourceMap": true,
    "strict": true,
    "target": "es2019"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
